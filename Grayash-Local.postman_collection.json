{
	"info": {
		"_postman_id": "bfa87342-1151-4219-b2e5-0f5200dd0cea",
		"name": "Grayash-Local",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "OauthToken",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "cb4c5ed9-950f-4a0c-8e18-33418c54efd1",
						"exec": [
							"var data = JSON.parse(responseBody);",
							"postman.setEnvironmentVariable(\"OauthToken\", data.access_token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "password",
							"value": "{{client-secret}}",
							"type": "string"
						},
						{
							"key": "username",
							"value": "{{client-id}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/x-www-form-urlencoded",
						"type": "text"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "{{grant_type}}",
							"type": "text"
						},
						{
							"key": "username",
							"value": "{{username}}",
							"type": "text"
						},
						{
							"key": "password",
							"value": "{{password}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{URL}}{{OauthPort}}/oauth/token",
					"host": [
						"{{URL}}{{OauthPort}}"
					],
					"path": [
						"oauth",
						"token"
					]
				}
			},
			"response": []
		}
	]
}